<resources>

        <!-- Base application theme. -->
        <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
            <!-- Customize your theme here. -->
            <item name="colorPrimary">@color/dshbbtnbgkcolor1</item>
            <item name="colorPrimaryDark">@color/colorPrimary</item><!--for top time-->
            <item name="colorAccent">@color/colorAccent</item>
            <item name="windowActionBar">false</item>
            <item name="windowNoTitle">true</item>
        </style>

        <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
            <item name="android:textColorPrimary">#43A047</item> <!--use for menu text -->
    <!--        <item name="android:background">#43A047</item> &lt;!&ndash;use for menu background &ndash;&gt;-->

        </style>

        <style name="Divider">
            <item name="android:layout_width">150dp</item>
            <item name="android:layout_height">3dp</item>
            <item name="android:background">?android:attr/listDivider</item>
        </style>

        <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">    </style>

</resources>
